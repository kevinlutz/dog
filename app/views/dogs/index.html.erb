<p style="color: green"><%= notice %></p>

<h1>Dogs List</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Breed</th>
      <th>Age</th>
    </tr>
  </thead>
</table>


<div id="dogs">
  <% @dogs.each do |dog| %>
    <%= render dog %>
    <p>
      <%= link_to "Show This Dog", dog %>
    </p>
  <% end %>
</div>

<%= link_to "New Dog", new_dog_path, class: "btn btn-secondary" %>
